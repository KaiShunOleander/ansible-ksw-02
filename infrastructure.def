# Add your hosts here

# The host that controls the remotes
[controller]
control ansible_connection=local

# All systems that will run Robust.exe
[robust]
os-login backup_port=9998
os-asset backup_port=9999


# All systems that will run simulator.exe
[simulator]
os-region00 backup_port=9990

# All systems which will have the opensimulator binaries installed
[opensim:children]
robust
simulator

# All systems that will offer the grid services
[grid_services]
os-login

# All systems that will offer the asset and inventory service
[asset_services]
os-asset

[asset_database]
os-asset


[backup]
os-backup
